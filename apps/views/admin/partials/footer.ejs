</div><!-- /.admin-content -->
</main>
</div>

<script>
    // Mobile sidebar toggle
    function toggleSidebar() {
        const sidebar = document.getElementById('sidebar');
        const overlay = document.getElementById('sidebarOverlay');
        sidebar.classList.toggle('admin-sidebar--open');
        overlay.classList.toggle('admin-sidebar-overlay--active');
    }

    // Desktop sidebar collapse toggle
    function toggleCollapse() {
        const sidebar = document.getElementById('sidebar');
        const main = document.getElementById('adminMain');
        const isCollapsed = sidebar.classList.toggle('admin-sidebar--collapsed');

        // Update main content margin
        if (isCollapsed) {
            main.classList.add('admin-main--expanded');
        } else {
            main.classList.remove('admin-main--expanded');
        }

        // Save preference to localStorage
        localStorage.setItem('admin-sidebar-collapsed', isCollapsed ? 'true' : 'false');
    }

    // Restore sidebar state on page load
    document.addEventListener('DOMContentLoaded', function () {
        const sidebar = document.getElementById('sidebar');
        const main = document.getElementById('adminMain');
        const isCollapsed = localStorage.getItem('admin-sidebar-collapsed') === 'true';

        if (isCollapsed) {
            sidebar.classList.add('admin-sidebar--collapsed');
            main.classList.add('admin-main--expanded');
        }
    });
</script>
