    /* Loading Overlay - Enhanced */
    .import-loading-overlay {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: linear-gradient(135deg, rgba(15, 23, 42, 0.9) 0%, rgba(30, 41, 59, 0.95) 100%);
      display: flex;
      justify-content: center;
      align-items: center;
      z-index: 9999;
      backdrop-filter: blur(8px);
      opacity: 0;
      visibility: hidden;
      transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .import-loading-overlay.active {
      opacity: 1;
      visibility: visible;
    }

    .import-loading-content {
      background: linear-gradient(145deg, #ffffff 0%, #f8fafc 100%);
      padding: 2.5rem 3.5rem;
      border-radius: 24px;
      text-align: center;
      box-shadow:
        0 25px 80px rgba(0, 0, 0, 0.4),
        0 0 0 1px rgba(255, 255, 255, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.8);
      max-width: 420px;
      transform: scale(0.9) translateY(20px);
      opacity: 0;
      transition: all 0.5s cubic-bezier(0.34, 1.56, 0.64, 1);
    }

    .import-loading-overlay.active .import-loading-content {
      transform: scale(1) translateY(0);
      opacity: 1;
    }

    /* Icon Container with Spinner Ring */
    .import-loading-icon-container {
      position: relative;
      width: 100px;
      height: 100px;
      margin: 0 auto 1.8rem;
      display: flex;
      align-items: center;
      justify-content: center;
    }

    /* Dual-Ring Spinner around Icon */
    .import-loading-icon-container::before,
    .import-loading-icon-container::after {
      content: '';
      position: absolute;
      border-radius: 50%;
    }

    .import-loading-icon-container::before {
      width: 100%;
      height: 100%;
      border: 3px solid transparent;
      border-top-color: #22c55e;
      border-right-color: #22c55e;
      animation: spinClockwise 1.2s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    }

    .import-loading-icon-container::after {
      width: 80%;
      height: 80%;
      border: 3px solid transparent;
      border-bottom-color: #10b981;
      border-left-color: #10b981;
      animation: spinCounterClockwise 0.8s cubic-bezier(0.5, 0, 0.5, 1) infinite;
    }

    @keyframes spinClockwise {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(360deg);
      }
    }

    @keyframes spinCounterClockwise {
      0% {
        transform: rotate(0deg);
      }

      100% {
        transform: rotate(-360deg);
      }
    }

    .import-loading-icon-glow {
      position: absolute;
      width: 70%;
      height: 70%;
      background: radial-gradient(circle, rgba(34, 197, 94, 0.25) 0%, transparent 70%);
      border-radius: 50%;
      animation: pulseGlow 2s ease-in-out infinite;
    }

    @keyframes pulseGlow {

      0%,
      100% {
        transform: scale(1);
        opacity: 0.5;
      }

      50% {
        transform: scale(1.4);
        opacity: 0.9;
      }
    }

    .import-loading-icon {
      font-size: 2.5rem;
      display: inline-block;
      animation: floatBounce 3s ease-in-out infinite;
      filter: drop-shadow(0 4px 8px rgba(0, 0, 0, 0.1));
      position: relative;
      z-index: 1;
    }

    @keyframes floatBounce {

      0%,
      100% {
        transform: translateY(0) scale(1);
      }

      25% {
        transform: translateY(-6px) scale(1.05) rotate(-3deg);
      }

      50% {
        transform: translateY(-3px) scale(1.02);
      }

      75% {
        transform: translateY(-8px) scale(1.05) rotate(3deg);
      }
    }

    /* Text Styles */
    .import-loading-text {
      font-size: 1.3rem;
