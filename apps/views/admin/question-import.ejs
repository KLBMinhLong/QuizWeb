                    { text: "ƒêang l∆∞u v√†o database...", icon: "üíæ" },
                    { text: "S·∫Øp ho√†n t·∫•t...", icon: "‚ú®" }
                  ];

                  const funFacts = [
                    "üí° M·∫πo: B·∫°n c√≥ th·ªÉ import h√†ng trƒÉm c√¢u h·ªèi c√πng l√∫c!",
                    "üìö C√¢u h·ªèi ƒë∆∞·ª£c l∆∞u v√†o ng√¢n h√†ng ƒë·ªÅ thi an to√†n",
                    "‚ö° H·ªá th·ªëng t·ª± ƒë·ªông ki·ªÉm tra v√† validate d·ªØ li·ªáu",
                    "üéØ M·ªói c√¢u h·ªèi ƒë∆∞·ª£c ph√¢n lo·∫°i theo ƒë·ªô kh√≥ v√† lo·∫°i",
                    "üöÄ Import nhanh ch√≥ng v√† hi·ªáu qu·∫£!"
                  ];

                  let messageIndex = 0;
                  let factIndex = 0;

                  function updateStepIndicators(currentStep) {
                    steps.forEach((step, index) => {
                      step.classList.remove("active", "completed");
                      if (index < currentStep) {
                        step.classList.add("completed");
                      } else if (index === currentStep) {
                        step.classList.add("active");
                      }
                    });
                  }

                  function updateStatusWithTransition(text, icon) {
                    const iconElement = document.querySelector(".import-loading-icon");

                    // Fade out
                    statusText.classList.add("fade");

                    setTimeout(() => {
                      statusText.textContent = text;
                      if (iconElement) iconElement.textContent = icon;
                      // Fade in
                      statusText.classList.remove("fade");
                    }, 200);
                  }

                  if (form && overlay) {
                    form.addEventListener("submit", function (e) {
                      overlay.classList.add("active");

                      const messageInterval = setInterval(function () {
                        if (messageIndex < messages.length) {
                          const msg = messages[messageIndex];
                          updateStatusWithTransition(msg.text, msg.icon);
                          updateStepIndicators(messageIndex);
                          messageIndex++;
                        } else {
                          const fact = funFacts[factIndex % funFacts.length];
                          updateStatusWithTransition(fact, fact.split(" ")[0]);
                          // Keep all steps completed when cycling through facts
                          updateStepIndicators(messages.length);
                          factIndex++;
                        }
                      }, 1800);

                      window.addEventListener("beforeunload", function () {
                        clearInterval(messageInterval);
                      });
                    });
                  }
                });
              </script>

