<%- include("../partical/header", { title: "Kết quả bài thi" }) %>

<!-- Breadcrumb -->
<nav class="breadcrumb">
  <a href="/" class="breadcrumb__item">Trang chủ</a>
  <span class="breadcrumb__separator">›</span>
  <a href="/subjects" class="breadcrumb__item">Môn học</a>
  <span class="breadcrumb__separator">›</span>
  <span class="breadcrumb__item breadcrumb__item--current">Kết quả</span>
</nav>

<div class="page-header">
  <h1 class="page-title">Kết quả bài thi</h1>
</div>

<div class="card" style="max-width: 600px; margin: 0 auto;">
  <div style="text-align: center; padding: var(--spacing-xl);">
    <!-- Điểm số lớn -->
    <div style="font-size: 72px; font-weight: bold; color: var(--color-primary); margin-bottom: var(--spacing-md);">
      <%= result.score %>
    </div>
    <div style="font-size: 18px; color: var(--color-text-muted); margin-bottom: var(--spacing-xl);">
      điểm
    </div>

    <!-- Thống kê -->
    <div style="
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--spacing-lg);
      margin-bottom: var(--spacing-xl);
      padding: var(--spacing-lg);
      background: var(--color-primary-soft);
      border-radius: var(--radius-md);
    ">
      <div>
        <div style="font-size: 32px; font-weight: bold; color: var(--color-primary);">
          <%= result.correctCount %>
        </div>
        <div style="font-size: 14px; color: var(--color-text-muted);">
          Câu đúng
        </div>
      </div>
      <div>
        <div style="font-size: 32px; font-weight: bold; color: var(--color-text-main);">
          <%= result.total %>
        </div>
        <div style="font-size: 14px; color: var(--color-text-muted);">
          Tổng số câu
        </div>
      </div>
    </div>

    <!-- Tỷ lệ phần trăm -->
    <div style="
      margin-bottom: var(--spacing-xl);
      padding: var(--spacing-md);
      background: #f5f5f5;
      border-radius: var(--radius-md);
    ">
      <div style="font-size: 14px; color: var(--color-text-muted); margin-bottom: var(--spacing-sm);">
        Tỷ lệ đúng
      </div>
      <div style="
        width: 100%;
        height: 8px;
        background: #e0e0e0;
        border-radius: 4px;
        overflow: hidden;
      ">
        <div style="
          width: <%= result.total > 0 ? (result.correctCount / result.total * 100) : 0 %>%;
          height: 100%;
          background: linear-gradient(90deg, var(--color-primary), var(--color-primary-dark));
          transition: width 0.3s ease;
        "></div>
      </div>
      <div style="
        font-size: 18px;
        font-weight: 600;
        color: var(--color-text-main);
        margin-top: var(--spacing-sm);
      ">
        <%= result.total > 0 ? Math.round((result.correctCount / result.total) * 100) : 0 %>%
      </div>
    </div>

    <!-- Actions -->
    <div style="display: flex; gap: var(--spacing-md); justify-content: center;">
      <a href="/subjects" class="btn btn-secondary">
        Về danh sách môn học
      </a>
    </div>
  </div>
</div>

<%- include("../partical/footer") %>



